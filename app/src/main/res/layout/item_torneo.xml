<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_torneo"
    android:baselineAligned="false"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:layout_gravity="center|top"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:contentDescription="@string/item_torneo_icon_desc"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/item_n_players"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/item_torneo_nparticipantes"/>

            <TextView
                android:id="@+id/item_format"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/item_model_player"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="5dp" />


        </LinearLayout>

</LinearLayout>